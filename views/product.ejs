<div class="d-flex justify-content-center my-5">
    <div class="col-6">

        <h1>Products:</h1>
        <% if ((typeof products != 'undefined') && (products.length <= 0)){ %>
            <p>You have no product in sale</p>
        <% } %>
        
        <% if ((typeof products != 'undefined') && (products.length > 0)){ %>
            <div class="table-main table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Images</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Discount</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>
    
                        <% products.forEach(function(product){ %>
                
                            <tr>
                                <td class="thumbnail-img">
                                    <img class="img-fluid" src="<%= product.img %> " alt="">
                                </td>
                                <td class="name-pr">
                                    <%= product.name %> 
                                </td>
                                <td class="price-pr">
                                    <% if (product.discount) { %>
                                        <p><span class="myLine">$ 80.0</span> / $ 60.0</p> 
                                    <% } else { %>
                                        <p>$ 80.0</p>
                                    <% } %> 
                                </td>
                                <td class="name-pr">
                                    <%= product.category %> 
                                </td>
                                <td class="remove-pr">
                                    <a href="/admin/discount/<%= product.name %> ">
                                        <% if (product.discount) { %>
                                            <i class="far fa-check-square"></i>  
                                        <% } else { %>
                                            <i class="far fa-square"></i>
                                        <% } %> 
                                    </a>
                                </td>
                                <td class="remove-pr">
                                    <a href="#">
                                        <i class="fas fa-times"></i>
                                    </a>
                                </td>
                            </tr>
    
                        <% }) %>
                        
                    </tbody>
                </table>
            </div>
        <% } %>

        <h1>Add a Product</h1>
        <%- include ('./partials/messages') %>

        <form class="m-3 review-form-box" id="formRegister" action="/admin/add" method="POST">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <div>
                        <label for="name" class="mb-0">Name of the Product</label>
                        <input
                        class="form-control"
                        type="name"
                        name="name"
                        placeholder="Name"
                        value="<%= typeof name != 'undefined' ? name : '' %>"
                        />
                    </div>

                    <div>
                        <label for="img" class="mb-0">Path to the image</label>
                        <input
                        class="form-control"
                        type="text"
                        name="img"
                        value="/images/"
                        />
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <label for="category" class="mb-0">category of the Product</label><br>
                    <input type="radio" name="category" value="fruit"/>
                    <label>Fruits & Drinks</label><br>
                    <input type="radio" name="category" value="vegetable"/>
                    <label>Vegetables</label><br>
                    <input type="radio" name="category" value="grocery"/>
                    <label>Grocery</label><br>
                </div>

                <div class="form-group col-md-6">
                    <label for="password" class="mb-0">Your Password</label>
                    <input
                    class="form-control"
                    type="password"
                    name="password"
                    placeholder="Password"
                    />
                </div>
            </div>
            <button type="submit" class="btn hvr-hover">Add</button>
        </form>
    </div>
</div>


