<div class="d-flex justify-content-center my-5">
    <div class="col-6">
        <h1>Reset Password</h1>
        <%- include ('./partials/messages') %>

        <form class="m-3 review-form-box" id="formRegister" action="/resetPassword/<%= token %> " method="POST">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="password" class="mb-0">New Password</label>
                    <input
                    class="form-control"
                    type="password"
                    name="password"
                    placeholder="Password"
                    value="<%= typeof password != 'undefined' ? password : '' %>"
                    />
                </div>

                <div class="form-group col-md-6">
                    <label for="password2" class="mb-0">Confirm New Password</label>
                    <input
                    class="form-control"
                    type="password"
                    name="password2"
                    placeholder="Confirm Password"
                    value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                    />
                </div>
            </div>
            <button type="submit" class="btn hvr-hover">Reset Password</button>
        </form>
    </div>
</div>


